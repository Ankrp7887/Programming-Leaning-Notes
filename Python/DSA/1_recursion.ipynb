   "source": [
    "Recursion\n",
    "1. Base case (eg. if n == 0: return 1)\n",
    "2. Recurion call (eg. factorial(n-1))\n",
    "3. Calculation (eg. n * factorial(n-1))"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 10,
   "metadata": {},
   "outputs": [],
   "source": [
    "def factorial(n):\n",
    "    if n == 0:\n",
    "        return 1\n",
    "    else:\n",
    "        return n*factorial(n-1)\n",
    "        "
   ]
  },
